# Sources that inspired parts of this config:
# - http://durdn.com/blog/2012/11/22/must-have-git-aliases-advanced-examples/
[user]
  name = Ronald Gil
  email = me@rongil.xyz

[core]
  editor = vim
  pager = less -x4

[alias]
  # General
  c = checkout
  d = diff
  ds = diff --staged
  r = reset
  s = status -s
  st = status
  wd = diff --word-diff
  wds = diff --word-diff --staged

  # Log
  ls = log --pretty="format:'%C(yellow)%h %C(blue)[%aN] %C(auto)%G?%d %C(white)%s'" --decorate
  ll = log --pretty="format:'%C(yellow)%h %C(blue)[%aN] %C(auto)%G?%d %C(white)%s'" --decorate --numstat
  ld = log --pretty="format:'%C(yellow)%h %C(cyan)[%ad] %C(blue)[%aN] %C(auto)%G?%d %C(white)%s'" --decorate --date=short
  ldr = log --pretty="format:'%C(yellow)%h %C(cyan)[%ad] %C(blue)[%aN] %C(auto)%G?%d %C(white)%s'" --decorate --date=relative
  lol = log --pretty="format:'%C(yellow)%h %C(blue)[%aN] %C(auto)%G?%d %C(white)%s'" --decorate --graph
  lnc = log --pretty="format:'%h [%aN] %G?%d %s'" # No colors, for piping

  # Find
  find = "!git ls-files | grep -iE"

  # Assume unchanged
  assume = update-index --assume-unchanged
  unassume = update-index --no-assume-unchanged
  assumed = "!git ls-files -v | grep ^h | cut -c 3-" # List assumed files

  # Undo ( Source: http://megakemp.com/2016/08/25/git-undo/ )
  undo = "!f() { git reset --hard $(git rev-parse --abbrev-ref HEAD)@{${1-1}}; }; f"
